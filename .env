# =============================================================================
# MarketScout - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# cp env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application Mode
# -----------------------------------------------------------------------------
# Options: simulation, python, cpp
# - simulation: Use mock data (no API keys needed, good for testing)
# - python: Use Python WebSocket clients (connects to real exchanges)
# - cpp: Use C++ engine for high-performance (requires C++ engine running)
MODE=simulation

# -----------------------------------------------------------------------------
# Web Server
# -----------------------------------------------------------------------------
WEB_HOST=0.0.0.0
WEB_PORT=8000

# -----------------------------------------------------------------------------
# Database (PostgreSQL/TimescaleDB)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arbitrage
DB_USER=postgres
DB_PASSWORD=postgres

# Full connection URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/arbitrage

# -----------------------------------------------------------------------------
# Redis (Optional - for caching)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# C++ Engine (if MODE=cpp)
# -----------------------------------------------------------------------------
CPP_ENGINE_HOST=localhost
CPP_ENGINE_PORT=5555

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Default admin credentials (created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# -----------------------------------------------------------------------------
# Exchange API Keys (Optional - for live trading data)
# -----------------------------------------------------------------------------
# Note: Public WebSocket feeds don't require API keys
# These are only needed for private endpoints (trading, account info)

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_PASSPHRASE=

# Bybit
BYBIT_API_KEY=
BYBIT_API_SECRET=

# OKX
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# -----------------------------------------------------------------------------
# Trading Configuration
# -----------------------------------------------------------------------------
# Minimum profit threshold (percentage) to flag as opportunity
MIN_PROFIT_THRESHOLD=0.01

# Triangular arbitrage settings
ENABLE_TRIANGULAR_ARBITRAGE=true
TRIANGULAR_MIN_PROFIT_THRESHOLD=0.1
TRIANGULAR_TRADING_FEE=0.001

# Trading pairs to monitor (comma-separated)
TRADING_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,XRP/USDT

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# Prometheus metrics
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# -----------------------------------------------------------------------------
# Notifications (Optional)
# -----------------------------------------------------------------------------
# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Telegram bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord webhook
DISCORD_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s | %(levelname)-8s | %(name)-20s | %(message)s

# -----------------------------------------------------------------------------
# AWS Configuration (for deployment)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ECS Configuration
ECS_CLUSTER_NAME=marketscout-cluster
ECS_SERVICE_NAME=marketscout-service

# RDS Configuration
RDS_INSTANCE_IDENTIFIER=marketscout-db
